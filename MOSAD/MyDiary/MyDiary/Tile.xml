<?xml version="1.0" encoding="utf-8" ?> 
<tile>
  <visual branding="nameAndLogo">

    <binding template="TileSmall">
      <image src="Assets/background.jpg" placement="background" hint-overlay="20"/>
      <text hint-style="subtitle" hint-wrap="true">Title</text>
      <text hint-style="captionSubtle" hint-wrap="true">Date</text>
    </binding>
    
    <binding template="TileMedium">
      <image src="Assets/background.jpg" placement="background" hint-overlay="20"/>
      <text hint-style="subtitle" hint-wrap="true">Title</text>
      <text hint-style="captionSubtle" hint-wrap="true">Date</text>
    </binding>

    <binding template="TileWide">
      <image src="Assets/background.jpg" placement="background" hint-overlay="20"/>
      <text hint-style="subtitle" hint-wrap="true">Title</text>
      <text hint-style="captionSubtle" hint-wrap="true">Date</text>
    </binding>

    <binding template="TileLarge">
      <image src="Assets/background.jpg" placement="background" hint-overlay="20"/>
      <text hint-style="title" hint-wrap="true">Title</text>
      <text hint-style="baseSubtle" hint-wrap="true">Date</text>
    </binding>

  </visual>
</tile>